{
	"name": "explain-this",
	"displayName": "Explain This",
	"description": "Explain Code using OpenAI's Codex Model",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:explain-this.explainThisSingleLine",
		"onCommand:explain-this.explainThisSingleSentence",
		"onCommand:explain-this.explainThisMultiLine"

	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "explain-this.explainThisSingleLine",
				"title": "ExplainThis! with a Single Line Comment",
				"when": "editorTextFocus && editorHasSelection && !editorHasMultipleSelections"
			},
			{
				"command": "explain-this.explainThisSingleSentence",
				"title": "ExplainThis! with a Single Sentence",
				"when": "editorTextFocus && editorHasSelection && !editorHasMultipleSelections"
			},
			{
				"command": "explain-this.explainThisMultiLine",
				"title": "ExplainThis! with a Multiline Comment",
				"when": "editorTextFocus && editorHasSelection && !editorHasMultipleSelections"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "explain-this.explainThisSingleLine",
					"group": "explain-this@1",
					"when": "editorTextFocus && editorHasSelection && !editorHasMultipleSelections"
				},
				{
					"command": "explain-this.explainThisSingleSentence",
					"group": "explain-this@2",
					"when": "editorTextFocus && editorHasSelection && !editorHasMultipleSelections"
				},
				{
					"command": "explain-this.explainThisMultiLine",
					"group": "explain-this@3",
					"when": "editorTextFocus && editorHasSelection && !editorHasMultipleSelections"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "ExplainThis!",
			"properties": {
				"explainthis.apikey": {
					"type": "string",
					"default": "unset",
					"description": "OpenAI API Key with Codex Access"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"openai-api": "^1.2.6"
	}
}
